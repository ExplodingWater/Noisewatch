# MySQL Database Configuration for Hostinger
# Copy this file to .env and fill in your actual values

# Database Connection
# IMPORTANT: Use the FULL database name and username with Hostinger prefix
# Example: If your Hostinger username is u734807911, your database will be:
#   Database: u734807911_noisewatch
#   Username: u734807911_noisewatch_user

DB_HOST=localhost
DB_USER=u734807911_noisewatch_user
DB_PASSWORD=your_mysql_password_here
DB_DATABASE=u734807911_noisewatch
DB_PORT=3306

# Application Configuration
NODE_ENV=production
PORT=3000

# Google Maps API Configuration
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_MAP_ID=

# Optional: Decibel Calibration Offset
# Used to convert negative dBFS values to positive SPL values
DB_CALIB_OFFSET=115

